<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HakayaatBilArabiya</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

</head>
<body>
    <style>
        .navbar {
            background-color: #ff7f50; 
            padding: 10px 20px;
            display: flex;
            justify-content: space-between; 
            align-items: center; 
        }

        .navbar-nav {
            flex: 1;
            display: flex;
            justify-content: center; 
            gap: 40px; 
        }

        .navbar-brand {
            margin-right: 0; 
        }

        .navbar-brand img {
            height: 50px; 
            width: auto;
        }

        .nav-link {
            font-size: 18px; 
            color: white !important;
        }

        .nav-link:hover {
            text-decoration: underline;
            color: #ffcc00 !important; 
        }

        .dripping-design img {
            width: 100%;
            height: auto;
            display: block;
            max-height: 80px; 
            object-fit: cover;
        }

        header {
            margin-bottom: 0px;
        }

        footer {
            background-color: #ff7f50; 
            color: white;
            padding: 10px 0; 
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        footer .footer-links {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-bottom: 10px;
        }

        footer .footer-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

        footer .footer-links a:hover {
            text-decoration: underline;
        }

        .dripping-design-footer img {
            width: 100%;
            height: auto;
            display: block;
            max-height: 140px;
            object-fit: cover;
        }
    </style>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">الرئيسية</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Stories/GenerateStory">إنشاء قصة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/privacy">الخصوصية</a>
                    </li>
                </ul>
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.png" alt="Hakayaat Logo">
                </a>
            </div>
        </nav>

        <div class="dripping-design">
            <img src="~/images/dripping.png" alt="Dripping Design">
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="dripping-design-footer">
        <img src="~/images/dripping-footer.png" alt="Dripping Footer Design">
    </div>

    <footer>
        <div class="footer-content">
            <p>© 2024 Hakayaat</p>
            <a href="/">الرئيسية</a> |
            <a href="/privacy">الخصوصية</a> |
            <a href="/faq">الأسئلة الشائعة</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
